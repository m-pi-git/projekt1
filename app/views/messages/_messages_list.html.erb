<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Sender</th>
    <th>Date</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% messages.each do |message| %>
    <tr>
      <td><%= message.title %></td>
      <td><%= message.sender.email %></td>
      <td><%= message.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td>
        <%= link_to 'View', message_path(message) %>
        <!-- Dodaj więcej działań w zależności od potrzeb -->
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
